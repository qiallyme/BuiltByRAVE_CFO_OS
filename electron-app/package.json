{
  "name": "built-by-rays-cfo-os",
  "version": "1.0.0",
  "description": "BuiltByRays™ CFO OS – Desktop App for Clients",
  "main": "electron-app/main_launcher.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "29.0.0",
    "dotenv": "^16.4.5",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.builtbyrays.cfoos",
    "productName": "BuiltByRays™ CFO OS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-app/**/*",
      "VaultSyncDaemon.exe",
      "rag-backend/**/*",
      "vault/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": "VaultSyncDaemon.exe",
        "to": "VaultSyncDaemon.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron-app/assets/logo.png"
    },
    "asar": false
  }
}
